# FisioFlow - Configurações de Produção

# Flask Configuration
FLASK_APP=backend/app_simple.py
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-production-key-here

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://fisioflow:PASSWORD@postgres:5432/fisioflow_prod
SQLALCHEMY_DATABASE_URI=postgresql://fisioflow:PASSWORD@postgres:5432/fisioflow_prod
SQLALCHEMY_TRACK_MODIFICATIONS=False

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-production-key-here
JWT_ACCESS_TOKEN_EXPIRES=86400

# CORS Configuration
CORS_ORIGINS=https://fisioflow.com,https://app.fisioflow.com

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=noreply@fisioflow.com
MAIL_PASSWORD=EMAIL_PASSWORD_HERE

# API Keys
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_API_KEY=your-google-api-key-here

# WhatsApp/Twilio
TWILIO_ACCOUNT_SID=your-twilio-sid-here
TWILIO_AUTH_TOKEN=your-twilio-token-here
WHATSAPP_FROM=whatsapp:+5511999999999

# Pagamentos
MERCADOPAGO_ACCESS_TOKEN=your-mp-token-here
MERCADOPAGO_PUBLIC_KEY=your-mp-public-key-here
STRIPE_SECRET_KEY=sk_live_your-stripe-key-here
STRIPE_PUBLIC_KEY=pk_live_your-stripe-key-here

# Monitoramento
SENTRY_DSN=your-sentry-dsn-here

# SSL/TLS
ACME_EMAIL=admin@fisioflow.com

# Senhas (definir via secrets)
DB_PASSWORD=super-secure-db-password
GRAFANA_PASSWORD=secure-grafana-password
